<InputScreen3>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: [0.436, 0.44, 0.444, 1.0]
            Rectangle:
                pos: self.pos
                size: self.size
        
        Label:
            font_name: 'LatoRegular'
            canvas.before:
                Color:
                    rgba: [0.96, 0.97, 0.97, 1.0]
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: 'Patient Profile'
            color: [0.329, 0.329, 0.329, 0.4]
            size_hint: 1, 0.15
            font_size: 28

        GridLayout:
            size_hint: 1, 0.45
            rows: 3
            cols: 2
            padding: 50, 70
            spacing: 15, 30
            row_default_height: "30dp"
            row_force_default: True

            Label:
                text: "Diarrhea"
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: "NA"
                CheckBox:
                    name: "diarrhea_na"
                    group: "diarrhea"
                    active: True
                    on_release: app.set_var_value("DIARR", "")
                Label:
                    text: "Yes"                
                CheckBox:
                    name: "diarrhea_yes"
                    group: "diarrhea"
                    active: False
                    on_release: app.set_var_value("DIARR", "1")
                Label:
                    text: "No"
                CheckBox:
                    name: "diarrhea_no"
                    group: "diarrhea"
                    active: False
                    on_release: app.set_var_value("DIARR", "0")

            Label:
                text: "Weakness"
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: "NA"
                CheckBox:
                    name: "weakness_na"
                    group: "weakness"
                    active: True
                    on_release: app.set_var_value("WEAK", "")
                Label:
                    text: "Yes"
                CheckBox:
                    name: "weakness_yes"
                    group: "weakness"
                    active: False
                    on_release: app.set_var_value("WEAK", "1")
                Label:
                    text: "No"
                CheckBox:
                    name: "weakness_no"
                    group: "weakness"
                    active: False
                    on_release: app.set_var_value("WEAK", "0")

            Label:
                text: "Vomit"
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: "NA"
                CheckBox:
                    name: "vomit_na"
                    group: "vomit"
                    active: True
                    on_release: app.set_var_value("VOMIT", "")
                Label:
                    text: "Yes"
                CheckBox:
                    name: "vomit_yes"	
                    group: "vomit"
                    active: False
                    on_release: app.set_var_value("VOMIT", "1")
                Label:
                    text: "No"
                CheckBox:
                    name: "vomit_no"
                    group: "vomit"
                    active: False
                    on_release: app.set_var_value("VOMIT", "0")

        AnchorLayout:
            size_hint: 1, 0.3
            anchor_x: 'center'
            anchor_y: 'center'
            ImageButton:
                source: "./buttons/estimate.png"
                size_hint: 1, 0.3
                on_press: app.calc_risk()

        AnchorLayout:
            size_hint: 1, 0.08
            anchor_x: 'left'
            anchor_y: 'top'
            ImageButton:
                source: "./buttons/prev.png"
                size_hint: 0.5, 0.8
                on_press: app.go_screen(2)

<ResultScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: [0.436, 0.44, 0.444, 1.0]
            Rectangle:
                pos: self.pos
                size: self.size
        
        Label:
            font_name: 'LatoRegular'
            canvas.before:
                Color:
                    rgba: [0.96, 0.97, 0.97, 1.0]
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: 'Patient Profile'
            color: [0.329, 0.329, 0.329, 0.4]
            size_hint: 1, 0.15
            font_size: 28

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.55
            Widget:
                canvas.before:
                    Color:
                        rgba: root.curr_risk_color
                    Rectangle:
                        pos: self.pos
                        size: self.size[0], self.size[1] * root.curr_risk_level
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: str(root.curr_risk_label)
                Label:
                    text: "Risk level: " + "%.2f" % (root.curr_risk_level * 100) + "%"

        AnchorLayout:
            size_hint: 1, 0.3
            anchor_x: 'center'
            anchor_y: 'center'
            ImageButton:
                source: "./buttons/enter.png"
                size_hint: 1, 0.3
                on_press: app.restart()

