<InputScreen3>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            canvas.before:
                Color:
                    rgba: [0.96, 0.97, 0.97, 1.0]
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: 'Patient Profile'
            color: [0, 0, 0, 1]
            size_hint: 1, 0.25


        GridLayout:
            cols: 2
            padding: 50 
            spacing: 20

            canvas.before:
                Color:
                    rgba: [0.5, 0.5, 0.5, 1.0]
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Diarrhea"
            ToggleButton:
                text: "No" if self.state == "normal" else "Yes" 
                on_release: app.set_var_value("DIARR", 1 if self.text == "Yes" else 0)
            Label:
                text: "Weakness"
            ToggleButton:
                text: "No" if self.state == "normal" else "Yes" 
                on_release: app.set_var_value("WEAK", 1 if self.text == "Yes" else 0)

            Label:
                text: "Vomit"
            ToggleButton:
                text: "No" if self.state == "normal" else "Yes" 
                on_release: app.set_var_value("VOMIT", 1 if self.text == "Yes" else 0)

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.25
            Button:
                text: 'Previous'
                on_press: app.go_screen(2)
            Button:
                text: 'Calculate Risk'
                on_press: app.calc_risk()


<ResultScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            canvas.before:
                Color:
                    rgba: [0.96, 0.97, 0.97, 1.0]
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: 'Patient Prognosis'
            color: [0, 0, 0, 1]
            size_hint: 1, 0.25

        BoxLayout:
            orientation: 'horizontal'
            canvas.before:
                Color:
                    rgba: [0.5, 0.5, 0.5, 1.0]
                Rectangle:
                    pos: self.pos
                    size: self.size
            Widget:
                canvas.before:
                    Color:
                        rgba: root.curr_risk_color
                    Rectangle:
                        pos: self.pos
                        size: self.size[0], self.size[1] * root.curr_risk_level
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: str(root.curr_risk_label)
                Label:
                    text: "Risk level: " + "%.2f" % (root.curr_risk_level * 100) + "%"

        Button:
            orientation: 'horizontal'
            size_hint: 1, 0.25
            text: 'New Patient'
            on_press: app.restart()
