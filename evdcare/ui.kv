<InputScreen1>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            canvas.before:
                Color:
                    rgba: [0.96, 0.97, 0.97, 1.0]
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: 'Patient Profile'
            color: [0, 0, 0, 1]
            size_hint: 1, 0.25

        GridLayout:
            rows: 4
            cols: 2
            padding: 50 
            spacing: 20

            canvas.before:
                Color:
                    rgba: [0.5, 0.5, 0.5, 1.0]
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: 'Weakness:'
            ToggleButton:
                text: "No" if self.state == "normal" else "Yes" 
                on_release: app.set_var_value("WEAK", 1 if self.text == "Yes" else 0)

            Label:
                text: "Virus load"
            TextInput:
                text: ""
                multiline: False
                input_type: 'number'
                input_filter: 'float'
                on_text: app.set_var_value("PCR", args[1])
            Label:
                text: "Temperature"
            TextInput:
                text: ""
                multiline: False
                input_type: 'number'
                input_filter: 'float'
                on_text: app.set_var_value("TEMP", args[1])
            Label:
                text: "AST"
            TextInput:
                text: ""
                multiline: False
                input_type: 'number'
                input_filter: 'float'
                on_text: app.set_var_value("AST_1", args[1])

        Button:
            text: 'Next'
            size_hint: 1, 0.25
            on_press: app.go_screen(2)


