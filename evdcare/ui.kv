<ResultScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            canvas.before:
                Color:
                    rgba: root.curr_risk_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: root.curr_risk_label

        Button:
            text: 'New Patient'
            on_press: app.restart()
