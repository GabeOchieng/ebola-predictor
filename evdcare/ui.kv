<InputScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            canvas.before:
                Color:
                    rgba: [0.96, 0.97, 0.97, 1.0]
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: 'Patient Profile'
            color: [0, 0, 0, 1]
            size_hint: 1, 0.25

        GridLayout:
            id: input_values
            orientation: 'vertical'
            rows: 3
            cols: 2
            padding: 50 
            spacing: 100

            canvas.before:
                Color:
                    rgba: [0.5, 0.5, 0.5, 1.0]
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: 'Virus load:'
            TextInput:
                id: qpcr
                text: ""
                multiline: False
                input_type: 'number'
                input_filter: 'float'
                on_text: app.set_var_value("PCR", args[1])
            Label:
                text: 'Temperature:'
            TextInput:
                id: temp
                text: ""
                multiline: False
                input_type: 'number'
                input_filter: 'float'
                on_text: app.set_var_value("TEMP", args[1])
            Label:
                text: 'AST:'
            TextInput:
                id: ast
                text: ""
                multiline: False
                input_type: 'number'
                input_filter: 'float'
                on_text: app.set_var_value("AST_1", args[1])
#            Label:
#                text: 'Weakness:'
#            CheckBox:


        Button:
            id: get_risk
            text: 'Calculate Risk'
            size_hint: 1, 0.25
            on_press: app.calc_risk()

<ResultScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            canvas.before:
                Color:
                    rgba: root.curr_risk_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: root.curr_risk_label

        Button:
            text: 'New Patient'
            on_press: app.restart()
